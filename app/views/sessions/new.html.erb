<h3 class="text-center">Login</h3>
<%= form_for :user, url: '/login' do |f| %>
	<p>Email: <%= f.text_field :email, class: 'form-control', placeholder: 'example@mail.com' %></p>
	<p>Password: <%= f.password_field :password, class: 'form-control' %></p>
	<%= f.submit "Submit", class: 'form-control btn btn-danger' %>
	<% end %>
