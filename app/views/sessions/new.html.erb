
<div class="row">
	<div class="col-md-4 col-offset-md-4">
		<h1>Login!</h1>
		<hr>

		<%= form_for @user, url: '/sessions', method: "post" do |f| %>
			<div class="form-group">  
			  Email: <%= f.text_field :email%>
			</div> 
			<div class="form-group">  
			  Password: <%= f.password_field :password%>
			</div> 
			  <%= f.submit "Submit" %>
		<% end %>
		
	</div>
</div>

