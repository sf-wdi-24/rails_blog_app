<h1 class="text-center">Login</h1>

<%= form_tag '/login' do %>
	<div class="form-group">
		Email: <%= text_field_tag :email, nil,class: "form-control" %>
	</div>
	<div class="form-group">
		Password: <%= password_field_tag :password, nil,class: "form-control" %>
	</div>
	<div class="form-group">
		<%= submit_tag "Submit", class: "btn btn-primary" %>
	</div>
<% end %>
<p class="text-center form-question">Not a member yet? <%= link_to "Sign Up Here", signup_path, class: "link" %></p>