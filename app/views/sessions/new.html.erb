<div class="col-md-4 col-md-offset-4">
	<h1>Login</h1>

	<%= form_tag '/login' do %>
		<div class="form-group">
	    <%= text_field_tag :email, nil, class: "form-control", placeholder: "Email Address"%>
	  </div>
	  <div class="form-group">
	    <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password" %>
	  </div>
		<div class="form-group">
	    <%= submit_tag "Log In", class: "btn btn-block btn-default" %>
	  </div>
	<% end %>
</div>