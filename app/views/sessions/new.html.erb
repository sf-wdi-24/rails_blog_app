<h1>Login</h1>

<%= form_for 'login' do |f| %>
  <div class="form-group">
    <%= f.text_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, class: "form-control", placeholder: "Password", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.submit "Login", class: "btn btn-block btn-primary" %>
  </div>
<% end %>

<p><%= link_to "Forgot Password?", new_password_reset_path %></p>