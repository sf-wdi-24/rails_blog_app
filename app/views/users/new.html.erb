<div align="center">
<h1>Signup!</h1>
<hr>
<%= form_for :user, url: '/users' do |f| %>

  <p>Email:</p> <p><%= f.text_field :email %></p>
  <hr>
  <p>Password:</p> <p><%= f.password_field :password %></p>
  <hr>
  <p>Password Confirmation:</p> <p><%= f.password_field :password_confirmation %></p>
  <hr>
  <%= f.submit "Submit" %>

<% end %>
