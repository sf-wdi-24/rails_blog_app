<hr>
<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.text_field :name, class: "form-control", placeholder: "Name", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.text_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, class: "form-control", placeholder: "Password", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.submit "Save User", class: "btn btn-block btn-primary" %>
  </div>
<% end %>