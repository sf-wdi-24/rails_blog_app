<h1 class="text-center">Welcome to Rails Blog</h1>
<hr>
<div class="row text-center">
	<% if current_user %>
		<%= link_to "Create New Post", new_post_path, class: "link" %>
	<% end %>
</div>
<% @posts.each do |post| %>
	<div class="post-index">
		<div class="col-sm-8">
			<p class="title"><strong><%= post.title %></strong></p>
			<p class="post-by"><i>by <%= post.user.name %></i></p>
		</div>
		<div class="col-sm-4 link">
			<%= link_to "View Post", post_path(post), class: "pull-right" %>
		</div>
	</div>
<% end %>