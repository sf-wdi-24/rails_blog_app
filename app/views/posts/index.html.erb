  <div class="row" id="content">
    <% @posts.each do |post| %>
      <div class="blog-post">
        <div class="medium-8 columns">
          <h2><%= link_to post.title, post_path(post) %></h2>
          <figure class="photo">
            <%= image_tag post.image_url(:thumb).to_s, class:"thumbnail"%>
          </figure>
          <p><%= post.body %></p>
          <div class="callout">
            <ul class="menu simple">
              <li> by <em><%= post.user.name %></em> <small><%= time_ago_in_words(post.created_at) %> ago</small></li>
              <% if current_user && current_user.id == post.user.id %>
                <li><%= link_to post_path(post), method: :delete, class:"right button tiny warning" do %>
                  <i class="fa fa-trash"></i>
                <% end %>
                </li>
                <li><%= link_to edit_post_path(post), class:"right button tiny warning" do %>
                  <i class="fa fa-pencil-square-o"></i>
                <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
    <div class="large-4 columns right" data-sticky-container>
      <div class="sticky right" data-sticky data-anchor="content">
        <h4>Authors</h4>
      </div>
    </div>
  </div>
