<h1>Create a New Blog Post!</h1>
<hr>
<%= form_for @post do |f| %>
	<div class="form-group">
		<%= f.text_field :title, class: "form-control", placeholder: "Title", autofocus: true %>
	</div>
	<div class="form-group">
		<%= f.text_area :story, class: "form-control", placeholder: "Story" %>
	</div>
	<div class="form-group">
		<%= f.submit "Save Post", class: "btn btn-block btn-default" %>
	</div>
<% end %>

