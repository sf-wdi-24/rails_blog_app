<%= form_for @post do |f| %>

	<div class="form-group">
		<%= f.text_field :title, class: "form-control", placeholder: "Title" %>	
	</div>
	<div class="form-group">
		<%= f.text_field :content, class: "form-control", placeholder: "Content" %>
	</div>
	<div class="form-group">
		<%= f.submit "Submit", class: "btn btn-block btn-info" %>
	</div>

<% end %>