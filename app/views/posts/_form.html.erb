<%= form_for @post do |f| %>
	<div class="form-group">
		<%= f.label :title %>
		<%= f.text_field :title, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :content %>
		<%= f.text_area :content, class: "form-control", rows: "5" %>
	</div>
	<div class="form-group">
		<%= f.submit "Post", class: "btn btn-primary" %>
	</div>
<% end %>