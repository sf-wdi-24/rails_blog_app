<hr>
<%= form_for @post do |p| %>
  <div class="form-group">
    <%= p.text_field :title, class: "form-control", placeholder: "Title", autofocus: true %>
  </div>
  <div class="form-group">
    <%= p.text_field :content, class: "form-control", placeholder: "Body", autofocus: true %>
  </div>
  <div class="form-group">
    <%= p.submit "Submit", class: "btn btn-block btn-primary" %>
  </div>
<% end %>