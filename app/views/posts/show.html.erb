<div class="post-show">
	<h2><%= @post.title %></h2>
	<p class="content"><%= @post.content %></p>
	<p class="post-by"><i>Posted <%= time_ago_in_words(@post.created_at) %> ago by <%= link_to @post.user.name, user_path(@post.user) %></i></p>
	<% if current_user %>
		<%= link_to "All Posts", posts_path, class: "link" %> | 
		<%= link_to "All Users", users_path, class: "link" %> |  
		<%= link_to "Edit", edit_post_path, class: "link" %> |
		<%= link_to "Delete", @post, method: :delete, class: "link" %>
	<% else %>
		<%= link_to "All Posts", posts_path, class: "link" %> | <%= link_to "All Users", users_path, class: "link" %>		
	<% end %>
</div>	
	