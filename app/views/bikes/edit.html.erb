<h1 class="text-center">Edit a bike here</h1>

<%= form_for @bike do |f| %>

<div class="form-group">
	<%= f.text_field :name, autofocus: true, class: "form-control" %>
</div>
<div class="form-group">
	<%= f.text_field :description, class: "form-control" %>
</div>
	<%= f.submit "Save Bike", class: "btn btn-block btn-primary" %>
<% end %>