<h1 class="text-center">Add a new bike here</h1>

<%= form_for @bike, url: "/bikes", method: "post" do |f| %>

<div class="form-group">
	<%= f.text_field :name, placeholder: "Name", autofocus: true, class: "form-control" %>
</div>
<div class="form-group">
	<%= f.text_field :description, placeholder: "Description", class: "form-control" %>
</div>
	<%= f.submit "Save Bike", class: "btn btn-block btn-primary" %>
<% end %>
