<%= form_for :user, url: users_path do |f| %>
  <div class="row">
    <div class="large-12">
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :email %>
      <%= f.text_field :email %>
      <%= f.label :password %>
      <%= f.password_field :password %>
      <%= f.password_field :password_confirmation %>
      <%= f.submit "Submit", class:"button expanded small" %>
    </div>
  </div>
<% end %>